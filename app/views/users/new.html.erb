<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<% unless @user.twitter_id %>
<%= link_to 'Twitterで登録', '/auth/twitter', method: :post %>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url:signup_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <% if @user.twitter_id.blank? %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      <% end %>

      <% if @user.twitter_id %>
        <%= f.label :twitter_id, "Twitter ID" %>
        <%= f.text_field :twitter_id, class: 'form-control', readonly: true %>
      
        <%= f.hidden_field :icon, value: @user.icon %>

      <% end %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
