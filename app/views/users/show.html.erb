<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= icon @user, size:80 %>
        <%= @user.name %>
      </h1>
      <% if @user.twitter_id %>
        <%= link_to "@#{@user.twitter_id}", "https://twitter.com/#{@user.twitter_id}" %>
      <% end %>
    </section>
  </aside>
</div>
